{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Les commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Message</th>
                <th>Creation_date</th>
                <th>Modification_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.message }}</td>
                <td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('app_comment_show', {'id': comment.id}) }}">Voir +</a>
                    <a class="btn btn-warning" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de commentaire trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_comment_new') }}">Commenter</a>
{% endblock %}
