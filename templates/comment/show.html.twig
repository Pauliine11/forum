{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Un commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Message</th>
                <td>{{ comment.message }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ comment.creationDate ? comment.creationDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Modification_date</th>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_comment_index') }}">Retour</a>

     {% if app.user and app.user == comment.user %}
        <a class="btn btn-warning" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') or app.user == comment.user %}
        {{ include('comment/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
