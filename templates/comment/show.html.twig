{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Un commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Message</th>
                <td>{{ comment.message }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modification_date</th>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_comment_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
